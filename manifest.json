{
  "manifest_version": 3,
  "name": "Tomogotchi Assignment Companion",
  "version": "1.0",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": ["webRequest", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }]
}